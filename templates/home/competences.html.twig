{% extends 'base.html.twig' %}

{% block title %}Mes Compétences RT1 - Inass{% endblock %}

{% block body %}
    <style>
        .table-container {
            max-width: 1100px;
            margin: 40px auto;
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(15px);
            border-radius: 30px;
            padding: 30px;
            border: 1px solid rgba(243, 213, 217, 0.2);
            box-shadow: 0 20px 50px rgba(0,0,0,0.3);
            overflow-x: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            color: white;
            font-weight: 300;
        }
        th {
            text-align: left;
            padding: 20px;
            color: var(--rose-light);
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 0.8rem;
            border-bottom: 2px solid var(--rose-vif);
        }
        td {
            padding: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            font-size: 0.9rem;
            vertical-align: middle;
        }
        .rt-header {
            background: rgba(243, 213, 217, 0.1);
            color: var(--rose-vif);
            font-weight: bold;
            font-size: 1.1rem;
            text-align: center;
        }
        .badge-ac {
            background: var(--rose-vif);
            color: white;
            padding: 5px 12px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: bold;
            display: inline-block;
        }
        .btn-preuve {
            font-size: 0.75rem;
            text-decoration: none;
            color: var(--rose-light);
            border: 1px solid var(--rose-light);
            padding: 8px 15px;
            border-radius: 20px;
            transition: 0.3s;
            display: inline-block;
            white-space: nowrap;
        }
        .btn-preuve:hover {
            background: var(--rose-light);
            color: black;
            box-shadow: 0 0 15px var(--rose-light);
        }
        .stars {
            color: #FFD700;
            letter-spacing: 2px;
        }
    </style>

    <div class="intro-container">
        <span class="intro-text">E-Portfolio / SAE 1.04</span>
